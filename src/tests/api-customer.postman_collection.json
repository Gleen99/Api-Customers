  "item": [
    {
      "name": "Create a unique customer",
      "request": {
        "method": "POST",
        "url": "http://88.125.155.66:32783/api/v1/customers",
        "header": [
          {
            "key": "X-API-Key",
            "value": "key1",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Unique Customer Name Test\",\n  \"email\": \"testcustomer@example.com\",\n  \"address\": \"123 Test Street\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "console.log('Request Headers:', pm.request.headers);",
              "console.log('Request Body:', pm.request.body);",
              "console.log('Response:', pm.response.json());",
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"customerId\", jsonData._id);",
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "pm.test(\"Customer name is correct\", function () {",
              "    pm.expect(jsonData.name).to.eql(\"Unique Customer Name Test\");",
              "});",
              "pm.test(\"Customer email is correct\", function () {",
              "    pm.expect(jsonData.email).to.eql(\"testcustomer@example.com\");",
              "});",
              "pm.test(\"Customer address is correct\", function () {",
              "    pm.expect(jsonData.address).to.eql(\"123 Test Street\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
